{
  "compilerOptions": {
    "lib": ["es2022", "DOM"],
    "moduleResolution": "nodenext",
    "module": "NodeNext",
    "allowJs": true,
    "checkJs": false,
    "noEmit": false,
    "noImplicitAny": true,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "strict": true,
    "target": "es6",
    "outDir": "dist",
    "skipLibCheck": true
  },
  "include": ["dist/jml-es.js"],
  "exclude": ["node_modules"]
}
